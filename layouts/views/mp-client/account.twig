

{% extends '_layout.twig' %}


{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
      <p class="lead ">{{ fullname }} </p>
      
    </div>
  </section>
{% endblock %}
{% block content %}

        {% for item in products %}
        <div class=" marketing page-font">
                <div class="row  m-top">
                
                  <div class="col-md-7 order-md-2">
                    <div class="col-md-12 txt-top"><h2 class="products detail-title page-header">{{ item.course_name }}</h2></div>
                    <div class="col-md-12"><h4 class="products0">{% autoescape %}{{ item.description |raw}}{% endautoescape %}</h3></div>
                    <div class="col-md-12"><h5 class="products0">{% autoescape %}{{ item.course_notes |raw}}{% endautoescape %}</h5></div>
                 </div>
                    <div class="col-md-5 order-md-1">
                        <div class="col-md-12 img-top img-bottom">
                            <img  src="{{ path~item.image }}"> 
                        </div>
                    </div>
                  
                </div><!-- /.container -->
                <div class="row featurette">
                
                    <div class="col-md-12 order-md-1">
                        <div class="btn-group col-md-7 order-md-2">
                            <a type="button" class="btn btn-sm btn-outline-warning" href="?ID={{ item.id}}">Details</a>
                            <a type="button" class="btn btn-sm btn-outline-warning" href="?ID={{ item.id}}">Recepie</a>
                            <a type="button" class="btn btn-sm btn-outline-warning" href="?ID={{ item.id}}">Nutrition</a>
                            <a type="button" class="btn btn-sm btn-outline-warning" href="?ID={{ item.id}}">Order</a>
                        </div>
                    </div> 
                  
                
                 </div>
                 <!--hr class="featurette-divider"-->
				  <br>
                 
    	</div>
		<br>
        {% endfor %}
         
{% endblock %}