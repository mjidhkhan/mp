{% extends '_layout.twig' %}
{% block slider %}
    <div class="container page-font full-slider">{% include '_slider.twig' %}</div>
{% endblock %}
{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
    </div>
  </section>
{% endblock %}
{% block content %}
	<section id="product-details">
	{% for item in products %}
			<div class="col-lg-4">
     
			<div class=" marketing0 page-font container-fluid">
                <div class="row featurette m-top">
				<div class="col-md-12 ">
                        <div class="col-md-12 img-top img-bottom">
                            <img  class="img" src="{{ path~item.course_image }}"> 
                        </div>
                    </div>
                  <div class="col-md-12">
                   <div class="col-md-12  text-center"> <h3 class="products"><span type="text" class="underlined" onclick="getDetails({{item.course_id}})">{{ item.course_name }}</span></h3></div>
                    <div class="col-md-12 text-center"><p class="message ">{% autoescape %}{{ item.course_description |raw}}{% endautoescape %}</p></div>
                 </div>
                </div><!-- /.container -->
				  <br>
                 
    	</div>
				
			</div>

			
	{% endfor %}
  </section>
{% endblock %}