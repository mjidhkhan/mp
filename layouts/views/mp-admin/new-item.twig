
{% extends 'mp-admin/_admin-layout.twig' %}
{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
      
    </div>
  </section>
{% endblock %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Adding New Item In Stock</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" id="add_newitem">
              <div class="box-body">
                <div class="form-group">
                  <label for="item-name">Item Name</label>
                  <input type="text" class="form-control" id="item-name"  name="item-name" placeholder="Enter item name" required>
                </div>
                <div class="form-group">
                  <label for="item-quantity">Quantity</label>
                  <input type="number" min="0" class="form-control" id="item-quantity" name="item-quantity" placeholder="quantity" required>
                </div>
                <div class="form-group">
                  <label for="reorder-level">Reorder Level</label>
                  <input type="number" min="0" class="form-control" id="reoeder-level" name="reorder-level" placeholder="Reorder level" required>
                </div>
                <div class="form-group">
                  <label for="notice-level">Notice Level</label>
                  <input type="number" min="0" class="form-control" id="notice-level" name="notice-level" placeholder="Notice level" required>
                </div>
                <div class="form-group">
                  <label for="item-unit">Unit(<span class="small">g/ml or pack of 6</span>)</label>
                  <input type="text"  class="form-control" id="item-unit" name="item-unit" placeholder="Item unit" required>
                </div>
                 <input type="hidden" hidden class="form-control"  name="action" value="NEW_ITEM">
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit"  id="add_newitem" class="btn btn-primary">Submit</button>
              </div>
            </form>
        </div>
        </div>
          <!-- /.box -->
        <div class="col-md-4">
          <div class="box box-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Information Messages</h3>
            </div>
            <div class="box-body">
              <div class="row">
               
              </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>
  {% endblock %}