{% extends 'mp-admin/_admin-layout.twig' %}
{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
      
    </div>
  </section>
{% endblock %}

{% block content %}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                <h3 class="box-title">Items In Stock</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
           
                <div class="box-body">
                
              <table id="items" class="table table-bordered table-striped">
                <thead>
                <tr>
                
                  <th>Item Name</th>
                  <th>Quantity</th>
                  <th>Reorder Level</th>
                  <th>Notice Level</th>
                  <th>Units</th>
                   <th>Action</th>
                </tr>
                </thead>
                <tbody>
                
               
                 {% for item in stock %}
                 <tr>
                 
                  <td><span class="item">{{item.ingredient_name}}</span></td>
                  <td><span  class="item">{{item.quantity}}</span></td>
                  <td><span  class="item">{{item.reorder_level}}</span></td>
                  <td><span  class="item">{{item.notice_level}}</span></td>
                  <td><span  class="item">{{item.units}}</span></td>
                  <td>
                  <button type="button" class="btn  btn-small btn-primary" onclick="updateStock( {{item.id}})"><i class="fa fa-edit"></i></button>
                  <button type="button" class="btn  btn-small btn-danger" onclick="deleteStock(`{{item.ingredient_name}}`, {{item.id}})"><i class="fa fa-trash"></i></button>
                  
                  </td>
                 </tr>
                {% endfor %}
               
               
                </tbody>
                <!--tfoot>
                <tr>
                  <th>Item Name</th>
                  <th>Quantity</th>
                  <th>Reorder Level</th>
                  <th>Notice Level</th>
                  <th>Units</th>
                </tr>
                </tfoot-->
              </table>
          
          <!-- /.box -->
                    
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit"  id="add_newitem" class="btn btn-primary">Submit</button>
                </div>
           
            </div>
        </div>
          <!-- /.box -->
        <div class="col-md-4">
          <div class="box box-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Information Messages</h3>
            </div>
            <div class="box-body">
              <div class="row">
               
              </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>
{% endblock  %}