{% extends 'mp-admin/_admin-layout.twig' %}
{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
      
    </div>
  </section>
{% endblock %}

{% block content %}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                <h3 class="box-title">Employees</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
           
                <div class="box-body">
                 {% if employees|length > 0 %}
                    <h2 style="text-align:center">Employee Profile Card</h2>
                    <hr>
                    <div class="row">
               
                    	{% for employee in employees %}
                        {% if employee.status == 1 %}
                            {% set designation = 'Admin' %}
                        {% elseif  employee.status == 2  %}
                            {% set designation = 'Manager' %}
                        {% elseif  employee.status == 3  %}
                            {% set designation = 'Supervisor' %}
                        {% elseif  employee.status >3 and    employee.status <9   %}
                            {% set designation = 'Staff' %}
                        {% endif %}  
                          <div class="col-md-3">
                        <div class="card">
                        <div class="card-top">
                            <img src="{{path}}user/{{employee.image}}"  alt="{{employee.fullname}}"   class="img-circle card-image" style="width:50%; height:70%;">
                        </div>
                            <h3>{{employee.fullname}}</h3>
                            <p class="designation">{{designation}}</p>
                            <p><footer class="connect">{{designation}}</footer></p>
                        </div>
                          </div>
                  
                              	{% endfor %}              
                    
                       
                         </div>
          
          <!-- /.box -->
          {% else %}
          <div class="callout callout-primary alert alert-primary">
                <h4> Employees</h4>

                <h5>Employee's data not found</h5>
            </div>
          {% endif %}  
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <h4>MP Employees</h4>
                </div>
            </div>
        </div>
          <!-- /.box -->
          <!--
        <div class="col-md-4">
          <div class="box box-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Information Messages</h3>
            </div>
            <div class="box-body">
              <div class="row">
               
              </div>
            </div>
            <!-- /.box-body -->
        </div>
      
    </div>
</section>
{% endblock  %}