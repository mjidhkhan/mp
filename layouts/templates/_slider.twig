
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
 
      <div class="item active carousel-item ">
         <img  class="slider-image" src="{{ path~products[0].course_image }}">
         <div class="carousel-caption text-right page-font">
              <h1>{{ products[0].course_name }}</h1>
               <h3> {% autoescape %}{{products[0].course_description |raw}}{% endautoescape %}</h3>

              <p><a class="btn btn-lg btn-warning" href="#" role="button">Browse gallery</a></p>
            </div>
        
      </div>

      <div class="item carousel-item ">
         <img  class="slider-image" src="{{ path ~ products[1].course_image }}">
         <div class="carousel-caption page-font">
              <h1>{{ products[1].course_name }}</h1>
               <h3> {% autoescape %}{{products[1].course_description |raw}}{% endautoescape %}</h3>
              <p><a class="btn btn-lg btn-warning" href="#" role="button">Learn more</a></p>
            </div>
        
      </div>
    
      <div class="item carousel-item ">
        <img  class="slider-image" src="{{ path~products[2].course_image }}"> 
        <div class="container">
            <div class="carousel-caption text-left page-font">
              <h1>{{ products[2].course_name }}</h1>
              <h3> {% autoescape %}{{products[2].course_description |raw}}{% endautoescape %}</h3>
              
              <p><a class="btn btn-lg btn-warning" href="#" role="button">Sign up today</a></p>
              
            </div>
          </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


  
  
  
  
  
  
  
  



